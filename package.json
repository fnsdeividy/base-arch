{
  "name": "cloro-backend",
  "version": "1.0.0",
  "description": "Backend para o sistema Rosy Sales Flow",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "build:full": "npm run build && npm run db:setup",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run db:setup && nest start",
    "start:dev": "npm run db:setup && nest start --watch",
    "start:debug": "npm run db:setup && nest start --debug --watch",
    "start:prod": "npm run db:setup:prod && node dist/main",
    "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "db:setup:prod": "npm run db:generate && npm run db:migrate:deploy && npm run db:seed",
    "db:reset": "npm run db:migrate:reset --force && npm run db:seed",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:migrate:status": "prisma migrate status",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:format": "prisma format",
    "db:validate": "prisma validate"
  },
  "keywords": [
    "nestjs",
    "prisma",
    "postgresql",
    "sales",
    "management"
  ],
  "author": "Rosy Sales Flow Team",
  "license": "ISC",
  "dependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@prisma/client": "^6.15.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^24.3.1",
    "@types/passport-jwt": "^4.0.1",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.15.0",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "devDependencies": {
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2"
  }
}